-- checking how many days people were active 
select Id, count(ActivityDate)
from i-hexagon-364115.Capstone_CaseStudy.Active
group by Id
 
-- how many users have active days less than 20
select Id, count(ActivityDate)
from i-hexagon-364115.Capstone_CaseStudy.Active
group by Id
having count(ActivityDate) < 20

3 users have less than 20 days

-- how many users have 31 active days
select Id, count(ActivityDate)
from i-hexagon-364115.Capstone_CaseStudy.Active
group by Id
having count(ActivityDate) = 31

21 users have 31 active days

-- looking for the average distance and casting from float to integer
select  Id, Avg(Cast(TotalDistance AS integer)) as Total
from i-hexagon-364115.Capstone_CaseStudy.Active
group by Id, TotalDistance
order by Total desc

The Max distance = 28    and the Min distance = 11 

select  Id, Avg(Cast(TotalDistance AS integer)) as Total, 
  Case
      when TotalDistance <= 17 then "low" 
      when TotalDistance > 23 then "high"
      else "medium"
  end as category
from i-hexagon-364115.Capstone_CaseStudy.Active
group by Id, TotalDistance
order by Total desc



 
 
 
-- adding the avg of TotalMinutes 
select  Id, Avg(Cast(TotalDistance AS integer)) as Total, Avg(cast(Totalminutes/60 As integer)) as avg_hours,
  Case
      when TotalDistance <= 17 then "low" 
      when TotalDistance > 23 then "high"
      else "medium"
   end as category
from i-hexagon-364115.Capstone_CaseStudy.Active
group by Id, TotalDistance, TotalMinutes
order by Total desc
1# There were some values in the steps table as a (-) I had to return to Excel to Erase them and I used left join to rely on the Active table.
 
-- joining with the Steps table to find the relationship between distance and calories
select A.Id, Avg(TotalDistance) as avg_distance, avg(Calories) as avg_calories,
from i-hexagon-364115.Capstone_CaseStudy.Active A
Left join i-hexagon-364115.Capstone_CaseStudy.Steps S on A.Id = S.Id 
group by A.Id
order by avg_distance desc
2# -- joining with the Steps table to find the relationship between distance and steps
select A.Id, avg(TotalDistance)  as avg_distance, avg(TotalSteps) as steps
from i-hexagon-364115.Capstone_CaseStudy.Active A
left join i-hexagon-364115.Capstone_CaseStudy.Steps S on A.Id = S.Id 
group by A.Id
order by avg_distance desc

3# -- looking for the relationship between steps and calories
select Id, avg(TotalSteps) as steps, avg(Calories) calories
from  i-hexagon-364115.Capstone_CaseStudy.Steps 
group by Id
order by steps desc
 
 
 
4#-- looking for the relationship between hours of sleep and calories
select S.Id, avg(Calories) as calories, avg(TotalHoursAsleep) sleep_hours
from  i-hexagon-364115.Capstone_CaseStudy.Steps S
join  i-hexagon-364115.Capstone_CaseStudy.Sleep_Hours H on S.Id = H.Id
where H.SleepDay between '2016-05-01' and '2016-05-12'
group by S.Id
order by calories  desc
5#-- joining three tables to find the connection between Active hours, Calories, and sleep hours
select A.Id, avg(Totalminutes/60)avtive_hours, avg(Calories) as calories,
avg(TotalHoursAsleep) sleep_hours
from  i-hexagon-364115.Capstone_CaseStudy.Steps S
join  i-hexagon-364115.Capstone_CaseStudy.Sleep_Hours H on S.Id = H.Id
join  i-hexagon-364115.Capstone_CaseStudy.Active A on A.Id = S.Id
group by A.Id
ORDER BY Calories DESC
 
-- creating a view
create view `i-hexagon-364115.Capstone_CaseStudy.overall` as 
select A.Id, avg(Totalminutes/60)avtive_hours, avg(Calories) as calories, avg(TotalHoursAsleep) sleep_hours
from  i-hexagon-364115.Capstone_CaseStudy.Steps S
join  i-hexagon-364115.Capstone_CaseStudy.Sleep_Hours H on S.Id = H.Id
join  i-hexagon-364115.Capstone_CaseStudy.Active A on A.Id = S.Id
group by A.Id
ORDER BY Calories DESC
